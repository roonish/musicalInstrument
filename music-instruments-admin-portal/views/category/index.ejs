<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .category-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }
        .category-card:hover {
            transform: scale(1.02);
        }
        .category-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 5px;
        }
        .action-buttons {
            display: flex;
            justify-content: space-between;
        }
        .filter-sidebar {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Categories</h2>

        <!-- Success and Error Messages -->
        <% if (typeof error !== "undefined" && error) { %>
            <div class="alert alert-danger mb-4"><%= error %></div>
        <% } %>
        
        <% if (typeof success !== "undefined" && success) { %>
            <div class="alert alert-success mb-4"><%= success %></div>
        <% } %>

        <div class="row">
            <!-- Sidebar for Filtering -->
            <aside class="col-md-3">
                <div class="filter-sidebar">
                    <h5>Filter Categories</h5>
                    <hr>
                    <label class="form-label">Sort By:</label>
                    <select class="form-select">
                        <option>Name (A-Z)</option>
                        <option>Name (Z-A)</option>
                    </select>
                    <hr>
                    <label class="form-label">Category Type</label>
                    <div>
                        <input type="checkbox" id="type1"> <label for="type1">Electronics</label><br>
                        <input type="checkbox" id="type2"> <label for="type2">Music</label><br>
                        <input type="checkbox" id="type3"> <label for="type3">Accessories</label>
                    </div>
                </div>
            </aside>

            <!-- Main Content Area -->
            <div class="col-md-9">
                <!-- Add Category Form -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="text-center mb-3">Add New Category</h4>
                        <form action="/categories/add" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Category Name</label>
                                <input type="text" name="name" class="form-control" id="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Image URL</label>
                                <input type="text" name="image" class="form-control" id="image" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="description" class="form-control" id="description" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Add Category</button>
                        </form>
                    </div>
                </div>

                <!-- Categories Grid View -->
                <div class="row">
                    <% categories.forEach(category => { %>
                        <div class="col-md-4 mb-4">
                            <div class="category-card">
                                <img src="<%= category.image %>" alt="<%= category.name %>" class="category-image">
                                <h5 class="mt-3"><%= category.name %></h5>
                                <p class="text-muted"><%= category.description %></p>
                                <div class="action-buttons">
                                    <a href="/categories/edit/<%= category._id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/categories/delete/<%= category._id %>" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
