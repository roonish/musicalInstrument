<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .header h2 {
            font-weight: bold;
            color: #333;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }
        .tab-content { margin-top: 20px; }
        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.2s ease-in-out, box-shadow 0.3s;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .card:hover {
            transform: scale(1.03);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }
        .card img {
            height: 200px;
            object-fit: cover;
            border-bottom: 3px solid #007bff;
        }
        .action-buttons {
            display: flex;
            justify-content: space-between;
        }
        .nav-tabs .nav-link.active {
            font-weight: bold;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="header">
            <h2>Welcome to the Dashboard</h2>
        </div>

        <!-- Success and Error Messages -->
        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" id="homeTabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#products-tab">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#categories-tab">Categories</a>
            </li>
        </ul>

        <div class="tab-content">
            <!-- Products Tab -->
            <div class="tab-pane fade show active" id="products-tab">
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h4>All Products</h4>
                    <a href="/products" class="btn btn-primary">Add New Product</a>
                </div>
                <div class="row mt-3">
                    <% products.forEach(product => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card p-3">
                                <img src="<%= product.image %>" class="img-fluid" alt="<%= product.name %>">
                                <h5 class="mt-2"><%= product.name %></h5>
                                <p>Category: <strong><%= product.category.name %></strong></p>
                                <p>Price: <strong>$<%= product.price.toFixed(2) %></strong></p>
                                <div class="action-buttons">
                                    <a href="/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/products/delete/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Categories Tab -->
            <div class="tab-pane fade" id="categories-tab">
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h4>All Categories</h4>
                    <a href="/categories" class="btn btn-primary">Manage Categories</a>
                </div>
                <div class="row mt-3">
                    <% categories.forEach(category => { %>
                        <div class="col-md-4 mb-3">
                            <div class="card p-3">
                                <img src="<%= category.image %>" class="img-fluid" alt="<%= category.name %>">
                                <h5 class="mt-2"><%= category.name %></h5>
                                <p><%= category.description %></p>
                                <div class="action-buttons">
                                    <a href="/categories/edit/<%= category._id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/categories/delete/<%= category._id %>" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
