<!-- views/product/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }
        .product-card:hover {
            transform: scale(1.02);
        }
        .action-buttons {
            display: flex;
            justify-content: space-between;
        }
        .filter-sidebar {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Products</h2>
        
        <% if (typeof error !== "undefined" && error) { %>
            <div class="alert alert-danger mb-4"><%= error %></div>
        <% } %>
        
        <% if (typeof success !== "undefined" && success) { %>
            <div class="alert alert-success mb-4"><%= success %></div>
        <% } %>
        
        <div class="row">
            <aside class="col-md-3">
                <div class="filter-sidebar">
                    <h5>Filter Products</h5>
                    <hr>
                    <label class="form-label">Sort By:</label>
                    <select class="form-select">
                        <option>Price (Low to High)</option>
                        <option>Price (High to Low)</option>
                    </select>
                    <hr>
                    <label class="form-label">Category</label>
                    <div>
                        <% categories.forEach(category => { %>
                            <input type="checkbox" id="<%= category._id %>"> 
                            <label for="<%= category._id %>"><%= category.name %></label><br>
                        <% }) %>
                    </div>
                </div>
            </aside>
            
            <div class="col-md-9">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="text-center mb-3">Add New Product</h4>
                        <form action="/products/add" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Product Name</label>
                                <input type="text" name="name" class="form-control" id="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="description" class="form-control" id="description" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="category" class="form-label">Category</label>
                                <select name="category" class="form-select" required>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category._id %>"><%= category.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="quantity" class="form-label">Quantity</label>
                                <input type="number" name="quantity" class="form-control" id="quantity" required>
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" name="price" class="form-control" id="price" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Add Product</button>
                        </form>
                    </div>
                </div>

                <div class="row">
                    <% products.forEach(product => { %>
                        <div class="col-md-4 mb-4">
                            <div class="product-card">
                                <h5 class="mt-3"><%= product.name %></h5>
                                <p class="text-muted"><%= product.description %></p>
                                <p><strong>Category:</strong> <%= product.category.name %></p>
                                <p><strong>Quantity:</strong> <%= product.quantity %></p>
                                <p><strong>Price:</strong> $<%= product.price %></p>
                                <div class="action-buttons">
                                    <a href="/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/products/delete/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
