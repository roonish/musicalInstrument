<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Music Instruments Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-dark: #4f46e5;
            --primary-light: #a5b4fc;
            --secondary-color: #10b981;
            --secondary-dark: #059669;
            --danger-color: #ef4444;
            --background-color: #f9fafb;
            --card-bg: #ffffff;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --border-color: #e5e7eb;
            --success-color: #34d399;
        }
        
        body {
            background-color: var(--background-color);
            font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: var(--text-primary);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-image: linear-gradient(135deg, #f5f7fa 0%, #e4eaef 100%);
            position: relative;
            overflow: hidden;
        }
        
        /* Decorative Shapes */
        body::before, body::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            z-index: -1;
        }
        
        body::before {
            width: 300px;
            height: 300px;
            background: linear-gradient(to right, var(--secondary-color), var(--success-color));
            top: -100px;
            right: -100px;
            opacity: 0.3;
        }
        
        body::after {
            width: 400px;
            height: 400px;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            bottom: -200px;
            left: -200px;
            opacity: 0.2;
        }
        
        .signup-container {
            max-width: 580px;
            width: 100%;
            padding: 0 1.5rem;
            z-index: 1;
            margin: 2rem 0;
        }
        
        .signup-card {
            background-color: var(--card-bg);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
        }
        
        .signup-header {
            padding: 2rem 2rem 1.5rem;
            text-align: center;
            border-bottom: none;
        }
        
        .signup-logo {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(to right, var(--secondary-color), var(--primary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }
        
        .signup-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }
        
        .signup-subtitle {
            color: var(--text-secondary);
            font-size: 0.95rem;
            font-weight: 400;
        }
        
        .signup-body {
            padding: 0.5rem 2rem 2rem;
        }
        
        .form-control {
            border-radius: 12px;
            padding: 0.75rem 1rem;
            border: 1px solid var(--border-color);
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.25rem rgba(16, 185, 129, 0.25);
        }
        
        .form-label {
            font-weight: 500;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }
        
        .input-group-text {
            background-color: transparent;
            border-right: none;
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
            color: var(--text-secondary);
        }
        
        .input-group .form-control {
            border-left: none;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        
        .signup-btn {
            background: linear-gradient(to right, var(--secondary-color), var(--secondary-dark));
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.4);
            width: 100%;
            margin-top: 1rem;
        }
        
        .signup-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.5);
        }
        
        .form-check-input:checked {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        .signup-footer {
            padding: 1.5rem 2rem;
            text-align: center;
            background-color: rgba(249, 250, 251, 0.5);
            border-top: 1px solid var(--border-color);
        }
        
        .login-link {
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }
        
        .login-link:hover {
            color: var(--secondary-dark);
            text-decoration: underline;
        }
        
        .alert {
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
        }
        
        .alert-success {
            background-color: rgba(16, 185, 129, 0.1);
            border-color: rgba(16, 185, 129, 0.3);
            color: var(--secondary-dark);
        }
        
        .alert-danger {
            background-color: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.3);
            color: var(--danger-color);
        }
        
        /* Password strength indicator */
        .password-strength-meter {
            height: 5px;
            background-color: var(--border-color);
            border-radius: 5px;
            margin-top: 0.5rem;
            overflow: hidden;
        }
        
        .password-strength-meter span {
            display: block;
            height: 100%;
            width: 0;
            transition: width 0.3s ease;
        }
        
        .strength-weak {
            background-color: #ef4444;
            width: 25% !important;
        }
        
        .strength-fair {
            background-color: #f59e0b;
            width: 50% !important;
        }
        
        .strength-good {
            background-color: #3b82f6;
            width: 75% !important;
        }
        
        .strength-strong {
            background-color: #10b981;
            width: 100% !important;
        }
        
        .strength-text {
            font-size: 0.8rem;
            margin-top: 0.3rem;
            text-align: right;
        }
        
        /* Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .signup-card {
            animation: fadeIn 0.6s ease-out forwards;
        }
        
        .input-group {
            position: relative;
        }
        
        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
            background: none;
            border: none;
            color: var(--text-secondary);
            cursor: pointer;
        }
        
        /* Terms and conditions */
        .terms-container {
            margin-top: 1rem;
        }
        
        .terms-text {
            font-size: 0.9rem;
            color: var(--text-secondary);
        }
        
        .terms-link {
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 500;
        }
        
        .terms-link:hover {
            text-decoration: underline;
            color: var(--secondary-dark);
        }
        
        /* Responsive */
        @media (max-width: 576px) {
            .signup-container {
                padding: 0 1rem;
            }
            
            .signup-header, .signup-body, .signup-footer {
                padding-left: 1.5rem;
                padding-right: 1.5rem;
            }
        }
    </style>
</head>

<body>
    <div class="signup-container">
        <!-- Signup Card -->
        <div class="signup-card">
            <!-- Card Header -->
            <div class="signup-header">
                <div class="signup-logo">
                    <i class="bi bi-music-note-beamed me-2"></i>
                </div>
                <h1 class="signup-title">Create an Account</h1>
                <p class="signup-subtitle">Sign up to start managing your instruments</p>
            </div>
            
            <!-- Card Body -->
            <div class="signup-body">
                <!-- Alerts -->
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <%= error %>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <%= success %>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <!-- Signup Form -->
                <form action="/signup" method="POST" id="signupForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="username" class="form-label">Username</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Enter a username" value="<%= username || '' %>" required>
                            </div>
                            <div class="form-text">Use only letters and numbers</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value="<%= email || '' %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person-badge"></i>
                                </span>
                                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter your first name" value="<%= firstName || '' %>" required>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person-badge"></i>
                                </span>
                                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter your last name" value="<%= lastName || '' %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Create a strong password" required>
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="bi bi-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                        <div class="password-strength-meter mt-2">
                            <span id="strength-meter"></span>
                        </div>
                        <div class="strength-text" id="strength-text">Password strength</div>
                        <div class="form-text">
                            Use at least 8 characters with uppercase letters, lowercase letters, numbers, and special characters
                        </div>
                    </div>
                    
                    <div class="terms-container">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label terms-text" for="agreeTerms">
                                I agree to the <a href="#" class="terms-link">Terms of Service</a> and <a href="#" class="terms-link">Privacy Policy</a>
                            </label>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-success signup-btn">
                        <i class="bi bi-person-plus me-2"></i> Create Account
                    </button>
                </form>
            </div>
            
            <!-- Card Footer -->
            <div class="signup-footer">
                <p class="mb-0">
                    Already have an account? <a href="/login" class="login-link">Log In</a>
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle password visibility
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
        
        // Password strength checker
        document.getElementById('password').addEventListener('input', function() {
            const password = this.value;
            const meter = document.getElementById('strength-meter');
            const text = document.getElementById('strength-text');
            
            // Remove all classes
            meter.className = '';
            
            // Check strength
            let strength = 0;
            
            // Length check
            if (password.length >= 8) {
                strength += 1;
            }
            
            // Upper case check
            if (/[A-Z]/.test(password)) {
                strength += 1;
            }
            
            // Lower case check
            if (/[a-z]/.test(password)) {
                strength += 1;
            }
            
            // Number check
            if (/[0-9]/.test(password)) {
                strength += 1;
            }
            
            // Special char check
            if (/[^A-Za-z0-9]/.test(password)) {
                strength += 1;
            }
            
            // Update meter and text
            if (password.length === 0) {
                meter.className = '';
                text.textContent = 'Password strength';
                text.style.color = '';
            } else if (strength < 2) {
                meter.className = 'strength-weak';
                text.textContent = 'Weak';
                text.style.color = '#ef4444';
            } else if (strength < 3) {
                meter.className = 'strength-fair';
                text.textContent = 'Fair';
                text.style.color = '#f59e0b';
            } else if (strength < 5) {
                meter.className = 'strength-good';
                text.textContent = 'Good';
                text.style.color = '#3b82f6';
            } else {
                meter.className = 'strength-strong';
                text.textContent = 'Strong';
                text.style.color = '#10b981';
            }
        });
    </script>
</body>
</html>